# Configurações do Sistema de Cálculo de Perdas - Cana-de-Açúcar

# ============================================================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ============================================================================

# Oracle Database (Principal)
ORACLE_HOST=localhost
ORACLE_PORT=1521
ORACLE_SERVICE_NAME=XE
ORACLE_USERNAME=cana_user
ORACLE_PASSWORD=CanaPassword123

# PostgreSQL (Alternativo)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=cana_db
POSTGRES_USER=cana_user
POSTGRES_PASSWORD=CanaPassword123

# ============================================================================
# CONFIGURAÇÕES DA APLICAÇÃO
# ============================================================================

# Diretório para armazenar dados JSON
DATA_DIR=data

# Nível de logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ============================================================================
# PARÂMETROS DE CÁLCULO DE PERDAS
# ============================================================================

# Fatores base de perda por tipo de colheita
FATOR_BASE_MANUAL=0.05      # 5% para colheita manual
FATOR_BASE_MECANIZADA=0.08  # 8% para colheita mecanizada

# Fatores de ajuste ambientais
FATOR_UMIDADE_MIN=0.01      # Ajuste mínimo por umidade
FATOR_UMIDADE_MAX=0.03      # Ajuste máximo por umidade
FATOR_IDADE_MIN=0.005       # Ajuste mínimo por idade
FATOR_IDADE_MAX=0.02        # Ajuste máximo por idade
FATOR_CLIMA_MIN=0.005       # Ajuste mínimo por clima
FATOR_CLIMA_MAX=0.015       # Ajuste máximo por clima

# ============================================================================
# VALORES PADRÃO INTELIGENTES
# ============================================================================

# Valores aplicados quando dados não são fornecidos
IDADE_CANA_PADRAO=14              # meses
UMIDADE_SOLO_PADRAO=65.0          # %
TEMPERATURA_MEDIA_PADRAO=26.5     # °C
PRECIPITACAO_PADRAO=100.0         # mm nos últimos 30 dias
VARIEDADE_CANA_PADRAO=RB92579     # Variedade mais comum

# ============================================================================
# CONFIGURAÇÕES DE INTERFACE
# ============================================================================

# Cores da interface CLI (0=desabilitado, 1=habilitado)
USAR_CORES=1

# Formato de exibição de números
DECIMAL_PLACES=2
THOUSANDS_SEPARATOR=,

# ============================================================================
# CONFIGURAÇÕES DE BACKUP E ARQUIVOS
# ============================================================================

# Backup automático
AUTO_BACKUP=1                     # 0=desabilitado, 1=habilitado
BACKUP_INTERVAL_DAYS=7            # Intervalo em dias para backup

# Rotação de arquivos JSON
MAX_JSON_FILES=50                 # Máximo de arquivos JSON mantidos
AUTO_CLEANUP=1                    # Limpeza automática de arquivos antigos

# ============================================================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ============================================================================

# Modo de desenvolvimento (mostra informações extras)
DEV_MODE=0                        # 0=produção, 1=desenvolvimento

# Tempo limite para conexões de banco (segundos)
DB_TIMEOUT=30

# Número máximo de tentativas de conexão
DB_MAX_RETRIES=3